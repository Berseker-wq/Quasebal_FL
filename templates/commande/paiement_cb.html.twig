{# templates/commande/paiement_cb.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Paiement Carte Bancaire{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Paiement sécurisé</h2>

      <h5 class="mb-3">Détails de la commande :</h5>
      <ul class="list-group mb-4">
        {% for produit in produitsPanier %}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" width="60" height="60" class="me-3 rounded shadow-sm" style="object-fit: cover;">
              <div>
                <strong>{{ produit.nom }}</strong><br>
                Quantité : {{ produit.quantite }}
              </div>
            </div>
            <span class="fw-bold">{{ produit.totalProduit|number_format(2, ',', '.') }} €</span>
          </li>
        {% else %}
          <li class="list-group-item text-muted">Aucun produit dans le panier.</li>
        {% endfor %}
      </ul>

      <div class="card shadow-lg rounded-4">
        <div class="card-body p-4">
          <p class="mb-3">Montant à régler : <strong>{{ total }} €</strong></p>

          <form id="payment-form">
            <label for="card-element" class="form-label">Informations bancaires :</label>
            <div id="card-element" class="form-control p-3 mb-3 rounded"></div>
            <div id="card-errors" class="text-danger mb-3" role="alert"></div>
            <button id="submit" class="btn btn-primary w-100" type="submit">
              <span id="submit-text">Payer</span>
              <div id="spinner" class="spinner-border spinner-border-sm d-none ms-2" role="status"></div>
            </button>
          </form>
        </div>
      </div>

      <p class="text-muted text-center mt-4">
        Paiement sécurisé via <strong>Stripe</strong>. Aucune donnée bancaire n’est stockée sur notre site.
      </p>
    </div>
  </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
  const stripe = Stripe("{{ stripe_public_key }}");
  const elements = stripe.elements();
  const card = elements.create('card', {
    style: {
      base: {
        color: '#32325d',
        fontFamily: 'Arial, sans-serif',
        fontSize: '16px',
        '::placeholder': { color: '#a0aec0' }
      },
      invalid: { color: '#e3342f' }
    },
    hidePostalCode: true
  });
  card.mount('#card-element');

  const form = document.getElementById('payment-form');
  const submitButton = document.getElementById('submit');
  const submitText = document.getElementById('submit-text');
  const spinner = document.getElementById('spinner');
  const cardErrors = document.getElementById('card-errors');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitButton.disabled = true;
    spinner.classList.remove('d-none');
    submitText.textContent = 'Paiement en cours...';

    const { paymentMethod, error } = await stripe.createPaymentMethod({
      type: 'card',
      card: card
    });

    if (error) {
      cardErrors.textContent = error.message;
      spinner.classList.add('d-none');
      submitText.textContent = 'Payer';
      submitButton.disabled = false;
    } else {
      const response = await fetch('{{ path("app_paiement_cb_api") }}', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ paymentMethodId: paymentMethod.id })
      });

      const result = await response.json();

      if (result.error) {
        cardErrors.textContent = result.error;
        spinner.classList.add('d-none');
        submitText.textContent = 'Payer';
        submitButton.disabled = false;
      } else {
        const confirmation = await stripe.confirmCardPayment(result.clientSecret);
        if (confirmation.error) {
          cardErrors.textContent = confirmation.error.message;
          spinner.classList.add('d-none');
          submitText.textContent = 'Payer';
          submitButton.disabled = false;
        } else {
          window.location.href = result.redirect;
        }
      }
    }
  });
</script>
{% endblock %}
